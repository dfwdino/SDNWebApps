@using System;
@using System.Web;
@using System.Web.Mvc;
@using System.Web.Optimization

@{
    HttpCookieCollection SDNWebApps = Request.Cookies;
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Home", "Index", null, null, new { @class = "navbar-brand" })

        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Grocery", "Index", "Home", new { area = "GroceryList" }, new { @class = "MenuBar" }) </li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Gas", "List", "Person", new { area = "Gas" }, new { @class = "MenuBar" }) </li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Tasks", "Index", "Home", new { area = "Tasks" }, new { @class = "MenuBar" })</li>
                <li class="divider"></li>
                <li>@Html.ActionLink("Kid's", "Index", "DoneThings", new { area = "Baby" }, new { @class = "MenuBar" })</li>
                <li class="divider"></li>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.Cookies["SDNWebApps"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Home", new { area = "Login" }, new { @class = "MenuBar" })</li>
                    }
                    else
                    {
                        string @myid = Request.Cookies["SDNWebApps"].Values["SDNID"];
                        <li>@Html.ActionLink("Change Info", "Edit", "Home", new { area = "Login", id = @myid }, new { @class = "MenuBar" })</li>
                        <li>@Html.ActionLink("Logs", "Index", "Home", new { area = "Logs", id = @myid }, new { @class = "MenuBar" })</li>
                        <li>@Html.ActionLink("Weight", "Index", "Wt", new { area = "WeightTracking" }, new { @class = "MenuBar" })</li>
                        <li><a style="link: white;" class="MenuBar" href='http://dfwdino.dyndns.org/events' target="_blank">Events</a></li>
                        @*<li>@Html.ActionLink("Dreams", "Index", "Dreams", new { area = "Dreams" }, new { @class = "MenuBar" })</li>*@

                        <li>@Html.ActionLink("Log Out", "LogOut", "LogIn", new { area = "Login" }, new { @class = "MenuBar" })</li>


                    }
                </ul>
            </ul>

        </div>
    </div>
</div>
