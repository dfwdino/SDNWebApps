@using SDNWebApps.Areas.Baby.Models.DoneThings

@model List<SummaryModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>SummaryPage</title>
    </head>
    <body>
        <div>
            <div>
                <span style="width: 85px;display: inline-block;font-weight: bold">Date</span>
                <span style="width: 5px;display: inline-block;font-weight: bold">OZ</span>
            </div>

            @foreach (var sum in Model)
            {
                <div>
                    <span style="width: 85px;display: inline-block">@sum.ItemDate.ToShortDateString() -</span>
                    <span style="width: 20px;display: inline-block;text-align: center">@sum.OZ</span>
                </div>
            }
        </div>
    </body>
</html>