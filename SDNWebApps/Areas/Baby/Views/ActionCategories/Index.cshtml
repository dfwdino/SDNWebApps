@model IEnumerable<SDNWebApps.Views.ActionCategory>

                      

@{
    ViewBag.Title = "Category's";
    Layout = "~/Areas/Baby/Views/Shared/_BabyLayout.cshtml";
    ViewBag.Header = "Category's";
    HttpCookieCollection SDNWebApps = Request.Cookies;
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width: 50px">
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Index })
            @if (Request.Cookies["LoggedIn"] != null)
            {<span>
                | @Html.ActionLink("Delete", "Delete", new { id = item.Index })</span>
                }
</td>
    </tr>
}

</table>
