@using System.Web.UI.WebControls
@model SDNWebApps.Areas.Tasks.Models.AddTask

@{
    ViewBag.Title = "Add Task";
    Layout = "~/Areas/Tasks/Views/Shared/_TasksLayout.cshtml";
}
<title>@ViewBag.Title</title>
<div id="TaskAdded"></div>

<br/>
@Html.ActionLink("All Tasks","Index","Home",null,new{@style="padding-left: 5px;"})
<br/>

@using (Html.BeginForm("AddTask","Tasks", FormMethod.Post))
{<div>
     <div style="padding-bottom: 5px;padding-top: 5px">
         @Html.LabelFor(m => m.Title):
         @Html.TextBoxFor(m => m.Title)
     </div>
     <div style="padding-bottom: 5px;padding-top: 5px">
         @Html.LabelFor(m => m.DueDate):
         @Html.TextBoxFor(m => m.DueDate, new { @class = "date" })
     </div>
     <div style="padding-bottom: 5px;padding-top: 5px">
         @Html.LabelFor(m => m.PersonID):
         @Html.DropDownListFor(m => m.PersonID, new SelectList(Model.Persons, "ID", "PersonName", Model.Persons))
     </div>


         </div>
<br />
    @*<p><a href="#" class="add-link">Add</a></p>*@
    <p><input value="Add" type="submit"/> </p>
}


@Styles.Render("~/Content/css")
@Styles.Render("~/Content/themes/base/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/jqueryval")



<script type="text/javascript">
    $(document).ready(function () {
        $('#DueDate').datepicker();
    });
</script>