@using System.Drawing
@using SDNWebApps.Areas.GroceryList.Models.Home
@model  ViewItemsVM

@{
    int colorCounter = 0;
    string color = string.Empty;
}

@using (Html.BeginForm())
            {
                foreach (var item in Model.Items)
                {
                    MemoryStream stream;
                    FileContentResult test = null;

                    if (item.Image != null)
                    {
                        stream = new MemoryStream(item.Image);
                        test = new FileContentResult(item.Image, "image/jpeg");
                    }


                    switch (colorCounter)
                    {
                        case 0:
                            color = "lightblue";
                            colorCounter = 1;
                            break;
                        case 1:
                            color = "lightcoral";
                            colorCounter = 0;
                            break;

                    }


        //Need to redo this layout. :-(
        <div style="background-color: @color;width: 300px;" id="FullItem{@item.ID}">
            <span class="got-link" id=@item.ID style="alignment-adjust: central;width:50%">
                @Html.LabelForModel(item.Name, new { @class = "list" })
            </span>
            @if (!string.IsNullOrEmpty(item.Amount) && !item.Amount.Equals("0"))
            {
                @Html.LabelForModel(item.Amount, new { @class = "list", @style = "width:3%" })

            }
            @if (item.StoreID != null)
{
    //need to fix this
    if (!item.StoreID.Equals(3))
    {
                    <label style="width: 5%;">- @item.Store.StoreName </label>
                }
}

            @if (Model.ShowAll)
{
                <a href="#" id=@item.ID class="delete-link" style="width: 5%;">Delete</a>
                    @Html.ActionLink("Edit","EditItem","Items",new { itemID = @item.ID}, new { @style = "width:5%" })

                }
            @if (item.Image != null)
{
                    <br /><img src="data:image/jpg;base64,@(Convert.ToBase64String(item.Image))" width="200px" height="200px" />
                }
            
            @*<p class="BlackLine"></p>*@
        </div>



        }

    }

